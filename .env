# Database 
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=observ-db
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5

# Users Service 
USERS_SERVICE_NAME=users-service
USERS_SERVICE_HOST=0.0.0.0
USERS_SERVICE_PORT=8081

# Products Service 
PRODUCTS_SERVICE_NAME=products-service
PRODUCTS_SERVICE_HOST=0.0.0.0
PRODUCTS_SERVICE_PORT=8082

# Orders Service
ORDERS_SERVICE_NAME=orders-service
ORDERS_SERVICE_HOST=0.0.0.0
ORDERS_SERVICE_PORT=8083

# Observability - Tracing
TRACING_ENABLED=true
JAEGER_URL=http://localhost:14268/api/traces
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
TRACE_SAMPLE_RATE=1.0

# Observability - Metrics
METRICS_ENABLED=true
METRICS_PATH=/metrics
PROMETHEUS_URL=http://localhost:9090

# Observability - Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_CALLER=true
LOG_STACKTRACE=true

# Health Checks
HEALTH_CHECK_PATH=/health
READINESS_CHECK_PATH=/ready
HEALTH_CHECK_TIMEOUT=30s

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# External Services
POSTGRES_URL=postgres://postgres:postgres@localhost:5432/observ-db?sslmode=disable
JAEGER_COLLECTOR_URL=http://localhost:14268/api/traces
PROMETHEUS_GATEWAY_URL=http://localhost:9091
GRAFANA_URL=http://localhost:3000

ENVIRONMENT=development
DEBUG=true