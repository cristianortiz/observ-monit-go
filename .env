# Database 
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=observ-db
DB_SSL_MODE=disable
DB_MAX_CONNS=25                    # Máximo de conexiones en el pool
DB_MIN_CONNS=5                     # Mínimo de conexiones en el pool (siempre abiertas)
DB_MAX_CONN_LIFETIME=1h            # Tiempo de vida máximo de una conexión
DB_MAX_CONN_IDLE_TIME=30m          # Tiempo máximo que una conexión puede estar idle
DB_HEALTH_CHECK_INTERVAL=1m    

# API Config
API_NAME=factorit
API_BASE_PATH=/api/v1
# Users Service 
USERS_SERVICE_NAME=users-service
USERS_SERVICE_HOST=0.0.0.0
USERS_SERVICE_PORT=8081

# Products Service 
PRODUCTS_SERVICE_NAME=products-service
PRODUCTS_SERVICE_HOST=0.0.0.0
PRODUCTS_SERVICE_PORT=8082

# Orders Service
ORDERS_SERVICE_NAME=orders-service
ORDERS_SERVICE_HOST=0.0.0.0
ORDERS_SERVICE_PORT=8083

# Observability - Tracing (OTLP gRPC)
TRACING_ENABLED=true
TRACING_SERVICE_NAME=factorit
TRACING_SERVICE_VERSION=1.0.0
TRACING_OTLP_ENDPOINT=localhost:4317  # OTLP gRPC endpoint (no prefixes)
TRACING_ENVIRONMENT=development


# Observability - Metrics
METRICS_ENABLED=true
METRICS_PATH=/metrics
PROMETHEUS_URL=http://localhost:9090

# Observability - Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_CALLER=true
LOG_STACKTRACE=true

# Health Checks
HHEALTH_PATH=/health
READY_PATH=/ready
HEALTH_CHECK_TIMEOUT=30s

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# External Services
POSTGRES_URL=postgres://postgres:postgres@localhost:5432/observ-db?sslmode=disable
JAEGER_UI_URL=http://localhost:16686  # Jaeger Web UI
PROMETHEUS_GATEWAY_URL=http://localhost:9091
GRAFANA_URL=http://localhost:3000

ENVIRONMENT=development
DEBUG=true